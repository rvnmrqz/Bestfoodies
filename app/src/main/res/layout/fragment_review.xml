<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkbackgroundColor"
    tools:context="solomonkey.bestfoodies.Fragment_Review">

    <LinearLayout
        android:background="@drawable/rounded_shape"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:id="@+id/layout_writereview"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RatingBar
                android:id="@+id/review_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="5"
                android:numStars="5"
                android:stepSize="1.0"/>
            <TextView
                android:id="@+id/review_ratingValue"
                android:text="5 stars"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/review_ratingbar"
                android:layout_centerVertical="true"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:text="Review Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:maxLength="20"
            android:maxLines="1"
            android:lines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Review Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:maxLength="20"
            android:maxLines="1"
            android:lines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/review_submitButton"
            android:layout_gravity="end"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            android:text="Submit Review"
            android:padding="8dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ScrollView
        android:background="@color/colorWhite"
        android:layout_margin="8dp"
        android:layout_below="@+id/layout_writereview"
        android:layout_alignParentBottom="true"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Other Reviews Here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
